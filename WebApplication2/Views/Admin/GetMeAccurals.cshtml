@model IEnumerable<WebApplication2.Models.accurals>
@{
    ViewBag.Title = "Информация о выплатах";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Информация о выплатах</h2>

<table class="table">
    <tr>
        <th>
            <p>Сумма</p>
        </th>
        <th>
            <p>Дата</p>
        </th>
        <th>
            <p>Кому</p>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.users.fio)
            </td>
        </tr>
    }

</table>

